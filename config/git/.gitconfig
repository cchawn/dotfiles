# Include user-specific configuration (name, email, signing key)
# This file should be created in private/git/user.gitconfig
[include]
  path = ~/.gitconfig.user

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true

[alias]
  aliases = config --get-regexp alias
  amend = commit --amend --reuse-message=HEAD
  b = branch
  br = branch
  branches = branch -a
  c = clone --recursive
  ca = !git add -A && git commit -av
  cam = commit -am
  cameo = commit -a --amend --no-edit
  ci = commit
  co = checkout
  contributors = shortlog --summary --numbered
  credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"
  gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"
  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  last = log -1 HEAD
  remotes = remote -v
  s = status -s
  st = status
  tags = tag -l
  undo = reset HEAD~
  unstage = reset HEAD --

[apply]
  whitespace = fix

[branch]
  autoSetupMerge = simple
  autoSetupRebase = always
  sort = -committerdate

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  attributesfile = ~/.gitattributes
  autocrlf = false
  excludesfile = ~/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RF
  precomposeunicode = false
  trustctime = false
  untrackedCache = true
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[diff]
  algorithm = histogram
  colorMoved = default
  indentHeuristic = true
  renames = copies

[diff "ansible-vault"]
  cachetextconv = false
  textconv = ansible-vault view

[diff "bin"]
  textconv = hexdump -v -C

[fetch]
  parallel = 4
  prune = true
  tags = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f

[help]
  autocorrect = 1

[init]
  defaultBranch = main
  templatedir = ~/.git-templates

[log]
  date = relative
  follow = true

[merge]
  automerge = true
  conflictstyle = diff3
  log = true

[pull]
  ff = only

[push]
  autoSetupRemote = true
  default = current
  followTags = true

[rebase]
  autoStash = true
  backend = merge

[remote "origin"]
  prune = true

[status]
  showUntrackedFiles = all
  submoduleSummary = true

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git@github.com:"]
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

